<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dblearn.blog.mapper.sys.SysMenuMapper">
    <select id="queryListParentId" resultType="cn.dblearn.blog.entity.sys.SysMenu">
		select * from sys_menu where parent_id = #{parentId} order by order_num asc
	</select>

    <select id="queryNotButtonList" resultType="cn.dblearn.blog.entity.sys.SysMenu">
		select * from sys_menu where type != 2 order by order_num asc
	</select>

	<!--查询最大用户自增值-->
	<select id="queryMaxMenuId" resultType="java.lang.Integer">
         SELECT MAX(menu_id) FROM sys_menu
    </select>
</mapper>
